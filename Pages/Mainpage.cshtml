@page "{id?}"
@model FMI_web.Pages.MainpageModel

<main>
@{
    if (@Hashtables.MainPages.ContainsKey(Model.Id ?? "") && Hashtables.MainPages[Model.Id ?? ""].Type == Defs.TYPE_PAGE)
    {
        ViewData[Defs.VIEWDATA_PAGENAME] = Hashtables.MainPages[Model.Id ?? ""].Name;
        <h1>@Hashtables.MainPages[Model.Id ?? ""].Name</h1>
        @Html.Raw(Hashtables.MainPages[Model.Id ?? ""].Content)
    }
    else
    {
        ViewData[Defs.VIEWDATA_PAGENAME] = "Помилка";
        <partial name="_Error" />
    }
}
</main>